#!/bin/sh

case `uname` in
OpenBSD)
	echo TOOL=${TOOL:-clang} HOST=bsd ARFLAGS="${ARFLAGS:--rv}"
	;;
NetBSD)
	#TODO: send a patch to NetBSD to solve this problem
	echo HOST=bsd ARFLAGS="${ARFLAGS:--rv}"
	;;
*BSD)
	echo HOST=bsd
	;;
Linux)
	echo TOOL=${TOOL:-gnu} HOST=linux
	;;
Plan9)
	echo HOST=plan9
	;;
esac


for i
do
	case $1 in
	-c)

		mach=`uname -m`

		case $mach in
		amd64|x86_64)
			mach=amd64
			;;
		esac

		sys=`uname -s | tr 'A-Z' 'a-z'`
		echo CONF=$mach-$sys
		;;
	*)
		echo usage: config [-c] >&2
		exit 1
		;;
	esac
done
